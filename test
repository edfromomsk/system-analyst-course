@startuml C4_Example

' Define styles
skinparam rectangle {
  BackgroundColor orchid
  BorderColor black
}
skinparam database {
  BackgroundColor yellow
  BorderColor black
}
skinparam actor {
  BackgroundColor blue
  BorderColor black
}
skinparam component {
  BackgroundColor green
  BorderColor black
}
skinparam agent {
  BackgroundColor grey
  BorderColor black
}

title System Context diagram for XYZ Corporation

' Elements
actor Admin as "Administrator"
actor Staff as "Staff\nCompany Employees, Service Users"
actor Clients as "Clients\nPhysical and Legal Entities"
rectangle CRM as "Customer Relationship Management\nOrders and Internal Clients"
rectangle ERP as "Enterprise Resource Planning\nExternal Clients"
rectangle SMTP as "SMTP Service\nEmail Sending Service"
rectangle HCI as "Healthcare Information System\nRegulatory Information Management"
rectangle MobileApp as "Mobile Application\niOS/Android App"
rectangle Website as "Corporate Website\nUser-facing Portal"

' Relationships
CRM -down-> ERP : "SOAP\nInternal Orders Data Exchange"
CRM -right-> SMTP : "SMTP\nSend Notifications"
ERP -right-> HCI : "REST\nRegulatory Data Sync"
Website -right-> MobileApp : "REST\nData Sync"
Admin -right-> SMTP : "Access via\nBrowser/Desktop"
Staff -right-> Website : "Access via\nBrowser"
Clients -right-> MobileApp : "Access via\nMobile App"

' Legend
legend right
|=<color> | Meaning |
| orchid | Software System |
| yellow | Database |
| blue | User |
| green | Component |
| grey | Agent |
endlegend

@enduml
